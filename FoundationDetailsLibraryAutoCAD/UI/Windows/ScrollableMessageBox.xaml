<UserControl x:Class="FoundationDetailer.UI.Windows.ScrollableMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" Width="400">
            <TextBlock x:Name="MessageText" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="Close_Click"/>
    </Grid>
</UserControl>
