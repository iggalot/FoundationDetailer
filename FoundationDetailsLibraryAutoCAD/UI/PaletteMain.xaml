<UserControl x:Class="FoundationDetailsLibraryAutoCAD.UI.PaletteMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:FoundationDetailsLibraryAutoCAD.UI.Controls"
             xmlns:gb_ctrl="clr-namespace:FoundationDetailsLibraryAutoCAD.UI.Controls.PrelimGBControl"
             xmlns:gb_summary_ctrl="clr-namespace:FoundationDetailsLibraryAutoCAD.UI.Controls.GradeBeamSummaryControl"
             xmlns:equal_ctrl="clr-namespace:FoundationDetailsLibraryAutoCAD.UI.Controls.EqualSpacingGBControl"
             Height="600" Width="400">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Foundation Detailer"
                   FontWeight="Bold"
                   FontSize="16"
                   Grid.Row="0"
                   Margin="0,0,0,10"/>

        <!-- Main Controls -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="0,0,0,5" VerticalAlignment="Top">
                <Button x:Name="BtnQuery" Content="Query and Sync NOD" Margin="0,5"/>

                <Button x:Name="BtnSelectBoundary" Content="Select Boundary" Margin="0,5"/>

                <!-- Boundary Information GroupBox -->
                <GroupBox>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusCircle" Width="14" Height="14" Margin="0,0,5,0" Fill="Red" Stroke="Black"/>
                            <TextBlock x:Name="TxtBoundaryStatus" Text="No boundary selected" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button x:Name="BtnShowBoundary" Content="Show" Width="50" Margin="5"/>
                                <Button x:Name="BtnZoomBoundary" Content="Zoom" Width="50" Margin="5"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Vertices:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtBoundaryVertices" Text="-"/>
                            <TextBlock Text="Perimeter:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtBoundaryPerimeter" Text="-"/>
                            <TextBlock Text="Area:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtBoundaryArea" Text="-"/>
                        </StackPanel>


                    </StackPanel>
                </GroupBox>

                <!-- Action Buttons -->
                <StackPanel x:Name="ActionButtonsPanel" Orientation="Vertical" Margin="0,10,0,0">
                    <!-- Replace the old prelim grade beam section with: -->
                    <gb_ctrl:PrelimGradeBeamControl x:Name="PrelimGBControl" Margin="0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnNEqualSpaces" Content="N Equal Spa" Width="90" Height="26" Margin="0,0,0,6"/>
                        <Button x:Name="BtnConvertExisting" Content="Convert Exist" Width="90" Height="26" Margin="0,0,0,6"/>

                    </StackPanel>
                    <gb_summary_ctrl:GradeBeamSummaryControl x:Name="GradeBeamSummary" Margin="0,5"/>
                    <Button x:Name="BtnAddRebar" Content="Add Rebar Bars" Margin="0,5"/>
                    <Button x:Name="BtnAddStrands" Content="Add Strands" Margin="0,5"/>
                    
                    
                    <!--<Button x:Name="BtnAddPiers" Content="Add Piers" Margin="0,5"/>
                    
                    --><!-- Pier Control container --><!--
                    <StackPanel x:Name="PierContainer" Orientation="Vertical" Margin="0,10,0,0"/>
                    
                    <Button x:Name="BtnPreview" Content="Preview" Margin="0,2"/>
                    <Button x:Name="BtnClearPreview" Content="Clear Preview" Margin="0,2"/>
                    <Button x:Name="BtnCommit" Content="Commit to DWG" Margin="0,2"/>-->
                </StackPanel>

                <TreeView Name="TreeViewExtensionData" Margin="5"
                        SelectedItemChanged="TreeViewExtensionData_SelectedItemChanged"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="Save" Width="80" Margin="5"/>
            <Button x:Name="BtnLoad" Content="Load" Width="80" Margin="5"/>
        </StackPanel>

        <!-- Status Bar -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="Status:" Margin="10,0,2,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="TxtStatus" Text="Ready" FontStyle="Italic" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
