<UserControl x:Class="FoundationDetailsLibraryAutoCAD.UI.Controls.PrelimGBControl.PrelimGradeBeamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="210">

    <StackPanel Margin="4">

        <!-- Action Button -->
        <Button x:Name="BtnAddGradeBeams"
                Content="PRELIM Grade Beams"
                Margin="0,0,0,4"
                Padding="4,1"
                IsEnabled="{Binding CanEditSpacingAndGenerate}"
                Click="BtnAddGradeBeams_Click"/>

        <!-- Horizontal Spacing -->
        <TextBlock Text="H Spacing (in)"
                   FontWeight="Bold"
                   Margin="0,0,0,1"/>

        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Min" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding HorzMin, Mode=TwoWay}"
                     IsEnabled="{Binding CanEditSpacingAndGenerate}"
                     Margin="3,0"/>

            <TextBlock Grid.Column="2"
                       Text="Max"
                       VerticalAlignment="Center"
                       Margin="6,0,0,0"/>

            <TextBox Grid.Column="3"
                     Text="{Binding HorzMax, Mode=TwoWay}"
                     IsEnabled="{Binding CanEditSpacingAndGenerate}"
                     Margin="3,0"/>
        </Grid>

        <!-- Vertical Spacing -->
        <TextBlock Text="V Spacing (in)"
                   FontWeight="Bold"
                   Margin="0,0,0,1"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Min" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding VertMin, Mode=TwoWay}"
                     IsEnabled="{Binding CanEditSpacingAndGenerate}"
                     Margin="3,0"/>

            <TextBlock Grid.Column="2"
                       Text="Max"
                       VerticalAlignment="Center"
                       Margin="6,0,0,0"/>

            <TextBox Grid.Column="3"
                     Text="{Binding VertMax, Mode=TwoWay}"
                     IsEnabled="{Binding CanEditSpacingAndGenerate}"
                     Margin="3,0"/>
        </Grid>

    </StackPanel>
</UserControl>
