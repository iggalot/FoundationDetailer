<UserControl x:Class="FoundationDetailsLibraryAutoCAD.UI.Controls.PrelimGBControl.PrelimGradeBeamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Orientation="Vertical" Margin="0,5">
        <!-- Generate Preliminary Beams Button -->
        <Button x:Name="BtnAddGradeBeams"
                Content="PRELIM GradeBeams"
                Margin="0,5"
                IsEnabled="{Binding CanEditSpacingAndGenerate}"
                Click="BtnAddGradeBeams_Click"/>

        <!-- Horizontal Spacing -->
        <GroupBox Header="Horizontal Spacing" Margin="0,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Min (in.):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="50" Text="{Binding HorzMin, Mode=TwoWay}" Margin="0,0,10,0" 
                         IsEnabled="{Binding CanEditSpacingAndGenerate}"/>
                <TextBlock Text="Max (in.):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="50" Text="{Binding HorzMax, Mode=TwoWay}"
                         IsEnabled="{Binding CanEditSpacingAndGenerate}"/>
            </StackPanel>
        </GroupBox>

        <!-- Vertical Spacing -->
        <GroupBox Header="Vertical Spacing" Margin="0,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Min (in.):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="50" Text="{Binding VertMin, Mode=TwoWay}" Margin="0,0,10,0" 
                         IsEnabled="{Binding CanEditSpacingAndGenerate}"/>
                <TextBlock Text="Max (in.):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="50" Text="{Binding VertMax, Mode=TwoWay}"
                         IsEnabled="{Binding CanEditSpacingAndGenerate}"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="BtnHighlightGradeBeams" Content="Show All" Width="60" Margin="5"/>
            <Button x:Name="BtnClearGradeBeams" Content="Clear All" Width="60" Margin="5" Click="BtnClearAll_Click"/>
        </StackPanel>

        <!-- Summary -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Qty:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Quantity}" Margin="5,0"/>
            <TextBlock Text="W (in):" FontWeight="Bold"/>
            <TextBlock Text="{Binding Width}" Margin="5,0"/>
            <TextBlock Text="D (in.):" FontWeight="Bold"/>
            <TextBlock Text="{Binding Depth}" Margin="5,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="TOT LENGTH (ft):" FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalLength}" Margin="5,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
