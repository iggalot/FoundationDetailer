<UserControl x:Class="FoundationDetailsLibraryAutoCAD.UI.Controls.GradeBeamSummaryControl.GradeBeamSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock Text="Grade Beam Summary" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Qty:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Quantity}" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Length (ft):" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalLength}" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="BtnHighlightGradeBeams" Content="Show All" Width="60" Margin="5" Click="BtnHighlightGradeBeams_Clicked"/>
            <Button x:Name="BtnClearGradeBeams" Content="Delete All" Width="60" Margin="5" Click="BtnClearAll_Click"/>
            <Button x:Name="BtnAddCustomGradeBeam" Content="(+) Add single GB" Margin="5" Click="BtnAddsingleGradeBeam_Clicked"/>
        </StackPanel>
    </StackPanel>
</UserControl>
