<UserControl x:Class="FoundationDetailsLibraryAutoCAD.UI.Controls.EqualSpacingGBControl.EqualSpacingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="200" MaxWidth="240" MinHeight="160">
    <Border Padding="4" BorderBrush="#AAA" BorderThickness="1">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" >

            <!-- Span -->
            <TextBlock Text="Span Length:" FontWeight="Bold" Margin="0,0,0,2"/>
            <TextBlock x:Name="SpanText" Foreground="DarkBlue" Margin="0,0,0,6"/>

            <!-- Min Spacing -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Min:" Width="50" VerticalAlignment="Center"/>
                <TextBox x:Name="MinSpacingBox" Width="80"/>
            </StackPanel>

            <!-- Max Spacing -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Max:" Width="50" VerticalAlignment="Center"/>
                <TextBox x:Name="MaxSpacingBox" Width="80"/>
            </StackPanel>

            <!-- Count -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Count:" Width="50" VerticalAlignment="Center"/>
                <TextBox x:Name="CountBox" Width="80"/>
            </StackPanel>

            <!-- Direction -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Dir:" Width="50" VerticalAlignment="Center"/>
                <ComboBox x:Name="DirectionCombo" Width="100" IsEditable="False"/>
            </StackPanel>

            <!-- Resulting Spacing -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Spacing:" Width="50" VerticalAlignment="Center"/>
                <TextBlock x:Name="ResultSpacingText" Foreground="DarkGreen" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Apply -->
            <Button x:Name="ApplyButton" Content="Apply" Width="60" Height="26" HorizontalAlignment="Right" Click="Apply_Click"/>
        </StackPanel>
    </Border>
</UserControl>
