<UserControl x:Class="FoundationDetailsLibraryAutoCAD.UI.Controls.BeamDimensionControl.BeamDimensionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             MinHeight="34"
             MinWidth="260">

    <Border Background="#2D2D30" Padding="4" CornerRadius="3">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Width Label -->
            <TextBlock x:Name="WidthText"
                       Text="W:"
                       Foreground="White"
                       FontSize="11"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Mode, ElementName=Root}" Value="Display">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Width Combo -->
            <ComboBox x:Name="WidthCombo"
                      Grid.Column="2"
                      Width="60"
                      Height="22"
                      FontSize="11"
                      VerticalContentAlignment="Center"
                      ToolTip="Width (inches)">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Mode, ElementName=Root}" Value="Display">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>

            <!-- Depth Label -->
            <TextBlock x:Name="DepthText"
                       Grid.Column="4"
                       Text="D:"
                       Foreground="White"
                       FontSize="11"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Mode, ElementName=Root}" Value="Display">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Depth Combo -->
            <ComboBox x:Name="DepthCombo"
                      Grid.Column="6"
                      Width="60"
                      Height="22"
                      FontSize="11"
                      VerticalContentAlignment="Center"
                      ToolTip="Depth (inches)">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Mode, ElementName=Root}" Value="Display">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>

            <!-- OK Button -->
            <Button x:Name="OkButton"
                    Grid.Column="8"
                    Content="✔"
                    Width="26"
                    Height="22"
                    FontSize="11"
                    Padding="0"
                    Click="Ok_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Mode, ElementName=Root}" Value="Display">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Cancel Button -->
            <Button x:Name="CancelButton"
                    Grid.Column="10"
                    Content="✕"
                    Width="26"
                    Height="22"
                    FontSize="11"
                    Padding="0"
                    Click="Cancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Mode, ElementName=Root}" Value="Display">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Border>
</UserControl>
